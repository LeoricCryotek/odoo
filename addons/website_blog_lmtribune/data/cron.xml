<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_auto_scrape_lmtribune" model="ir.cron">
        <field name="name">LMTribune: auto-scraper</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now().replace(hour=9, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_blog_post"/>
        <field name="code">model.lmtribune_scraper()</field>
        <field name="state">code</field>
    </record>
</odoo>
