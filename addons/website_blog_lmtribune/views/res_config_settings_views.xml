<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.lmtribune</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="seo_settings" position="after">
                <h2>LMTribune scraper</h2>
                <div class="row mt16 o_settings_container" id="communication_settings">
                    <div class="col-12 col-lg-12 o_setting_box" id="contact_form_install_setting" title="New messages are managed as leads or opportunities in your CRM app.">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">LMTribune credentials</span>
                            <div class="text-muted" id="msg_contact_form_install_setting">
                                Set username/password for https://e.lmtribune.com
                            </div>
                            <div class="row">
                                <label class="col-lg-3 o_light_label" string="LMTribune Username" for="lmtribune_username"/>
                                <field name="lmtribune_username" class="oe_inline"/>
                            </div>
                            <div class="row">
                                <label class="col-lg-3 o_light_label" string="LMTribune Password" for="lmtribune_password"/>
                                <field name="lmtribune_password" class="oe_inline"/>
                            </div>
                            <div class="row">
                                <label class="col-lg-3 o_light_label" string="LMTribune Blog" for="lmtribune_blog_blog"/>
                                <field name="lmtribune_blog_blog" class="oe_inline"/>
                            </div>
                            <div class="row">
                                <label class="col-lg-3 o_light_label" string="LMTribune Get Most Recent Only" for="lmtribune_most_recent_only"/>
                                <field name="lmtribune_most_recent_only" class="oe_inline"/>
                            </div>
                            <div class="row" attrs="{'invisible': [('lmtribune_most_recent_only','=',True)]}">
                                <label class="col-lg-3 o_light_label" string="LMTribune Count Per Launch" for="lmtribune_count_per_launch"/>
                                <field name="lmtribune_count_per_launch" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
