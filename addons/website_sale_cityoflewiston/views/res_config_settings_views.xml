<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.cityoflewiston</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="seo_settings" position="after">
                <h2>CityOfLewiston Sale/Shop Settings</h2>
                <div class="row mt16 o_settings_container" id="cityoflewiston_sale_settings">
                    <div class="col-12 col-lg-6 o_setting_box" id="cityoflewiston_sale_visibile_signed_in_only_setting">
                        <div class="o_setting_left_pane">
                            <field name="cityoflewiston_sale_visibile_signed_in_only"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="cityoflewiston_sale_visibile_signed_in_only"/>
                            <div class="text-muted">
                                If checked - all shop pages will be accessible only for signed-in users.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
