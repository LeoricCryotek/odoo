<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sale_order_portal_content_inherit_gl_code" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//div[@id='so_date']" position="after">
            <div class="row" id="gl_code" t-if="sale_order.gl_code">
                <div class="mb-3 col-6">
                    <strong>GL Code:</strong>
                    <span t-field="sale_order.gl_code"/>
                </div>
            </div>
        </xpath>
    </template>


</odoo>
