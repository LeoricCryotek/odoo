<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Email template for RLS creation -->
        <record id="email_template_rls_creation" model="mail.template">
            <field name="name">RLS Creation</field>
            <field name="model_id" ref="rls.request_legal_services"/>
            <field name="subject">Your RLS Request has been created</field>
            <field name="email_to">${object.create_uid.email_formatted |safe}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Hello ${object.create_uid.name},</p>
                    <p>Your RLS Request has been created. You can view the record from the portal:</p>
                    <p><a href="/my/request_legal_services/${object.id}">View RLS Request</a></p>
                </div>
            </field>
        </record>

        <!-- Email template for RLS assignment -->
        <record id="email_template_rls_assignment" model="mail.template">
            <field name="name">RLS Assignment</field>
            <field name="model_id" ref="rls.request_legal_services"/>
            <field name="subject">You have been assigned an RLS Request</field>
            <field name="email_to">${object.attorney_assigned.email_formatted |safe}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Hello ${object.attorney_assigned.name},</p>
                    <p>You have been assigned an RLS Request. You can view and manage the record from the admin portal:</p>
                    <p><a href="/web#id=${object.id}&amp;view_type=form&amp;model=request.legal.services">View RLS Request</a></p>
                </div>
            </field>
        </record>

        <!-- Email template for RLS stage update -->
        <record id="email_template_rls_stage_update" model="mail.template">
            <field name="name">RLS Stage Update</field>
            <field name="model_id" ref="rls.request_legal_services"/>
            <field name="subject">Your RLS Request has moved to a new stage</field>
            <field name="email_to">${object.create_uid.email_formatted |safe}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Hello ${object.create_uid.name},</p>
                    <p>Your RLS Request has moved to a new stage: ${object.stage_id.name}. You can view the record from the portal:</p>
                    <p><a href="/my/request_legal_services/${object.id}">View RLS Request</a></p>
                </div>
            </field>
        </record>
    </data>
</odoo>
