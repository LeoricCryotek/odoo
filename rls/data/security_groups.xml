<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Attorney group -->
        <record id="group_attorney" model="res.groups">
            <field name="name">Attorney</field>
            <field name="category_id" ref="rls.module_category"/>
        </record>

        <!-- Administrator group -->
        <record id="group_administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="rls.module_category"/>
        </record>

        <!-- Manager group -->
        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="rls.module_category"/>
        </record>

        <!-- Access rights for Attorney -->
<record id="access_rls_attorney" model="ir.model.access">
    <field name="name">Access RLS for Attorney</field>
    <field name="model_id" ref="model_request_legal_services"/>
    <field name="group_id" ref="group_attorney"/>
    <field name="perm_read" eval="True"/>
    <field name="perm_write" eval="True"/>
    <field name="perm_create" eval="True"/>
    <field name="perm_unlink" eval="True"/>
</record>

<!-- Access rights for Administrator -->
<record id="access_rls_administrator" model="ir.model.access">
    <field name="name">Access RLS for Administrator</field>
    <field name="model_id" ref="model_request_legal_services"/>
    <field name="group_id" ref="group_administrator"/>
    <field name="perm_read" eval="True"/>
    <field name="perm_write" eval="True"/>
    <field name="perm_create" eval="True"/>
    <field name="perm_unlink" eval="True"/>
</record>

<!-- Access rights for Manager -->
<record id="access_rls_manager" model="ir.model.access">
    <field name="name">Access RLS for Manager</field>
    <field name="model_id" ref="model_request_legal_services"/>
    <field name="group_id" ref="group_manager"/>
    <field name="perm_read" eval="True"/>
    <field name="perm_write" eval="True"/>
    <field name="perm_create" eval="True"/>
    <field name="perm_unlink" eval="True"/>
</record>

<!-- Record rules for Manager -->
<record id="rls_manager_rule" model="ir.rule">
    <field name="name">Manager Rule</field>
    <field name="model_id" ref="model_request_legal_services"/>
    <field name="groups" eval="[(4, ref('group_manager'))]"/>
    <field name="domain_force">[('manager_id', '=', user.id)]</field>
    <field name="perm_read" eval="True"/>
    <field name="perm_write" eval="True"/>
    <field name="perm_create" eval="True"/>
    <field name="perm_unlink" eval="True"/>
</record>

    </data>
</odoo>
