<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_update_days_until_due" model="ir.cron">
            <field name="name">Update Days Until Due</field>
            <field name="model_id" ref="model_request_legal_services"/>
            <field name="state">code</field>
            <field name="code">model.update_days_until_due()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')"/>
            <field name="priority">1</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
