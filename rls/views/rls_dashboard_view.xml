<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard form view -->
        <record id="rls_dashboard_form_view" model="ir.ui.view">
            <field name="name">rls.dashboard.form.view</field>
            <field name="model">request.legal.services</field>
            <field name="arch" type="xml">
                <form string="RLS Dashboard">
                    <sheet>
                        <div class="o_form_view o_form_editable">
                            <t t-component="DashboardRenderer" t-props="{
                                'mainRecord': state
                            }" />
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
