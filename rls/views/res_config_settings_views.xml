<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- RLS Configuration in Settings -->
        <record id="view_res_config_settings" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.rls</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.view_res_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" string="RLS" data-key="rls">
                        <!-- Add your RLS configuration fields here -->
                        <field name="rls_nature_of_request"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
