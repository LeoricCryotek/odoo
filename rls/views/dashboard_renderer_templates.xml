<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="dashboard_renderer_templates" name="Dashboard Renderer Templates">
        <t t-name="request_legal_services.DashboardRenderer">
            <div class="container">
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Total Requests</h5>
                                <p class="card-text">
                                    <i class="fas fa-clipboard-list"/>
                                    <t t-esc="state.data[0].total_requests"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
